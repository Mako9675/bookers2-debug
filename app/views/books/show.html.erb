<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
              <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          <td>
            <% if @book.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@book.id), method: :delete, class: "text-danger" do %>
              ♥<%= @book.favorites.count %> 
              <% end %>
            </p>
              <% else %>
            <p>
              <%= link_to book_favorites_path(@book.id), method: :post do %>
              ♡<%= @book.favorites.count %> 
              <% end %>
            </p>
            <% end %>
          </td>
          <td>
            <p>
            コメント数：<%= @book.book_comments.count %>
            </p>
          </td>
        </tr>
      </table>
      <table>
        <tr>
           <% @book.book_comments.each do |book_comment| %>
          <td>
            <%= link_to(book_comment.user) do %>
              <%= image_tag @book.user.get_profile_image(50,50) %><br>
              <%= book_comment.user.name %>
            <% end %>
          </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <% if book_comment.user.id == current_user.id %>
              <td><%= link_to 'Destroy', book_book_comments_path(book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
        <div>
          <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control book_body" %>
          <%= f.submit "送信" %>
          <% end %>
        </div>
    </div>
  </div>
</div>