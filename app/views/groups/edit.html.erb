<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Edition Group</h1>
      <%= form_with model: @group, local:true do |f| %>

      <div class="form-group">
        <%= f.label :name, "グループ名" %>
        <%= f.text_field :name, class: 'form-control group_name' %>
      </div>
 
      <div class="form-group">
        <%= f.label :introduction, "紹介文" %>
        <%= f.text_area :introduction, class: 'form-control group_introduction' %>
      </div>
 
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file group_image", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-info' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
